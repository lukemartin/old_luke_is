*, *:before, *:after {
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
}

body
  background-color: #f2f2f2
  overflow-y: scroll
  overflow-x: hidden

.content-wrap
  .content
    overflow: hidden

.section-wrap
  background-color: #fff

  section
    padding: 10px
    position: relative

  &.alt
    background-color: #f2f2f2

@media (min-width: $bp)
  .section-wrap
    section
      margin: 0 auto
      // padding: 20px 0
      max-width: $width

  .cols
    overflow: hidden

    &.cols-2
      margin-left: -5%

      .col
        float: left
        margin-left: 5%
        width: 45%

    &.cols-3
      margin-left: -5%

      .col
        float: left
        margin-left: 5%
        width: 28.33%

@media (min-width: $width)
  .section-wrap
    section
      padding: 20px 0