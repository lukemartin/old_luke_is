.header-wrap
  background: transparent url(/images/header-bg-blue.jpg) no-repeat center center;
  padding: 10px 0
  position: relative

  .main-header
    position: relative
    padding: 10px
    width: 100%

    .name
      font-size: 26px

      a
        color: #fff
      span
        color: #ffc5cf
        color: #354b57
      h1
        display: inline
        font-size: inherit
        margin: 0

@media (min-width: $bp)
  .header-wrap
    padding: 30px 0

    .main-header
      margin: 0 auto
      width: $bp